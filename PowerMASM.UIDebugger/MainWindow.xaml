<Window x:Class="PowerMASM.UIDebugger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerMASM.UIDebugger"
        mc:Ignorable="d"
        Title="PowerMASM.Debugger" Height="800" Width="800">
    <TabControl>
        <TabItem Header="Editor">
            <Grid Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <RichTextBox Grid.Column="0" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="RichTextBox"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
                <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Stretch">
                    <TextBlock Text="Output" FontWeight="Bold" Margin="0,0,0,10"/>
                    <UniformGrid Columns="2" Rows="5" Margin="0,0,0,10">
                        <TextBlock x:Name="RAX" Margin="5"/>
                        <TextBlock x:Name="RBX" Margin="5"/>
                        <TextBlock x:Name="RCX" Margin="5"/>
                        <TextBlock x:Name="RDX" Margin="5"/>
                        <TextBlock x:Name="RSI" Margin="5"/>
                        <TextBlock x:Name="RDI" Margin="5"/>
                        <TextBlock x:Name="RSP" Margin="5"/>
                        <TextBlock x:Name="RBP" Margin="5"/>
                        <TextBlock x:Name="RIP" Margin="5"/>
                    </UniformGrid>
                    <TextBlock Text="Stack" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ScrollViewer Height="200" Margin="0,0,0,10">
                        <TextBlock x:Name="Stack" TextWrapping="Wrap" Background="White"/>
                    </ScrollViewer>
                    <TextBlock Text="Output Log" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ScrollViewer Height="270" Margin="0,0,0,10">
                        <TextBlock x:Name="Output" TextWrapping="Wrap" Background="White"/>
                    </ScrollViewer>
                    <Button Content="Run" Margin="0,10,0,0" Click="RunButton_Click" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Settings">
            <Grid Background="Gray">
                <StackPanel HorizontalAlignment="Left">
                    <CheckBox Content="Enable Feature X" Margin="10"/>
                    <CheckBox Content="Enable Feature Y" Margin="10"/>
                    <Button Content="Save Settings"  Margin="10" Width="314"/>
                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
