<Window x:Class="PowerMASM.UIDebugger.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:PowerMASM.UIDebugger"
    mc:Ignorable="d"
        Title="PowerMASM Debugger" Height="1024" Width="1100" Background="#23272E">
    <DockPanel LastChildFill="True" Margin="16">
        <!-- Top Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="#2D333B" Foreground="White">
            <MenuItem Header="File">
                <MenuItem Header="Open..." />
                <MenuItem Header="Save" />
                <Separator/>
                <MenuItem Header="Exit" />
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo" />
                <MenuItem Header="Redo" />
            </MenuItem>
            <MenuItem Header="Run"/>
            <MenuItem Header="Help"/>
        </Menu>
        <!-- Main Grid Layout -->
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="350"/>
                <ColumnDefinition Width="2*" MinWidth="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Left: Code Editor and Run Button -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Content="Run" Height="32" Width="80" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="RunButton_Click"/>
                <Border Grid.Row="1" Margin="0,10,0,0" CornerRadius="8" Background="#282C34" BorderBrush="#3C4048" BorderThickness="1" MinWidth="300" MinHeight="400">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Code Editor" Foreground="#61AFEF" FontWeight="Bold" Margin="10,10,0,0" Grid.Row="0"/>
                        <local:MasmEditor x:Name="Editor" Grid.Row="1" Margin="1,10,10,10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinHeight="300" MinWidth="250"/>
                    </Grid>
                </Border>
            
            <!-- Right: Registers/Stack (top) and Output Log (bottom) -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Top: Registers and Stack side by side -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Registers -->
                    <Border Grid.Column="0" Margin="0,0,5,0" CornerRadius="8" Background="#23272E" BorderBrush="#3C4048" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Registers" Foreground="#98C379" FontWeight="Bold" Margin="10,10,0,0"/>
                            <DataGrid x:Name="RegisterGrid" Grid.Row="1" AutoGenerateColumns="False" HeadersVisibility="Column" MinHeight="120" MaxHeight="200" Background="#23272E" Foreground="#D7DAE0" BorderBrush="#3C4048" BorderThickness="1" Margin="10,10,10,10">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Register" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                    <!-- Stack -->
                    <Border Grid.Column="1" Margin="5,0,0,0" CornerRadius="8" Background="#23272E" BorderBrush="#3C4048" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Stack" Foreground="#E06C75" FontWeight="Bold" Margin="10,10,0,0"/>
                            <DataGrid x:Name="StackGrid" Grid.Row="1" AutoGenerateColumns="False" HeadersVisibility="Column" MinHeight="80" MaxHeight="140" Background="#23272E" Foreground="#D7DAE0" BorderBrush="#3C4048" BorderThickness="1" Margin="10,10,10,10">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
                <!-- Bottom: Output Log -->
                <Border Grid.Row="1" Margin="0,5,0,0" CornerRadius="8" Background="#282C34" BorderBrush="#3C4048" BorderThickness="1" MinHeight="120">
                    <DockPanel>
                        <TextBlock Text="Output Log" Foreground="#E5C07B" FontWeight="Bold" Margin="10,10,0,0"/>
                        <ScrollViewer Margin="10,40,10,10">
                            <TextBlock x:Name="Output" TextWrapping="Wrap" Foreground="#D7DAE0"/>
                        </ScrollViewer>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
        <!-- Bottom Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="#2D333B" Foreground="White" Width="130">
            <StatusBarItem Content="Ready"/>
        </StatusBar>
    </DockPanel>
</Window>
